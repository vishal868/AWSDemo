{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description":"A template for running a build",
    "Parameters": {
      "gitHubCloneURL": {
          "Description": "The clone URL of the GitHub repo",
          "Type": "String"
      },
      "codeBuildImage": {
          "Description": "The image to use when running code bulid, e.g. aws/codebuild/java:openjdk-8",
          "Type": "String",
          "Default":"aws/codebuild/java:openjdk-8"
        }
    },
    "Resources": {
     "CodeBuildServiceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": { "Service": [ "codebuild.amazonaws.com" ] },
                            "Action": [ "sts:AssumeRole" ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {"Fn::Join" : ["", [{ "Ref": "AWS::StackName" } , "-buildRole" ] ]},
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents",
                                        "logs:DescribeLogGroups",
                                        "logs:DeleteLogGroup"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Deny",
                                    "Action": [
                                        "CloudFormation:*"
                                    ],
                                    "Resource":"arn:aws:cloudformation:*:*:stack/gov-*"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
